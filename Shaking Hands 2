#include <limits>
#include <vector>
#include <climits>
#include <cstring>
#include <cstdlib>
#include <fstream>
#include <numeric>
#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>

using namespace std;
int main() {
    int N;
    cin >> N; // Read the number of people

    // Ensure the input meets the constraints
    if (N < 2 || N > 100) {
        cerr << "Invalid input. N should be between 2 and 100." << endl;
        return 1;
    }

    // Calculate the number of handshakes
    int handshakes = (N * (N - 1)) / 2;

    // Print the result
    cout << handshakes << endl;
    return 0;
}
